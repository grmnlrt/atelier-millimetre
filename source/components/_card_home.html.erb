<div class="card_picture" style="background-image: url(<%= image_path image %>)">
  <% if instagram %>
    <% link_to link, target: :_blank do %>
      <div class="card-hover">
        <div class="row">
          <div class="col-xs-12">
            <h2><%= title.upcase %></h2>
            <h4><%= description %></h4>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <% link_to link do %>
      <div class="card-hover">
        <div class="row">
          <div class="col-xs-12">
            <h2><%= title.upcase %></h2>
            <h4><%= description %></h4>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
