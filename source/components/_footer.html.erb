<div id="footer">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="footer-frame">
          <div class="row">
            <div class="col-md-3">
              <div class="contact-section hidden-xs hidden-sm">
                <div class="logo">
                  <% link_to "#" do %>
                    <%= image_tag 'mm_logo.png' %>
                  <% end %>
                </div>
                <div class="contact-section-info">
                  <h3>Atelier Millimètre</h3>
                  <h4>Paris / Dijon</h4>
                  <h4>06.77.44.44.44</h4>
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-md-6">
              <div class="social-media">
                <h4 class="text-center">Retrouvez tous nos produits sur Etsy</h4>
                <div class="social-media-icons">
                  <%= link_to image_tag("facebook.png"), "https://www.facebook.com/mm.millimetre/", :target => "_blank" %>
                  <%= link_to image_tag("instagram.png"), "https://www.instagram.com/atelier.millimetre/", :target => "_blank" %>
                  <%= link_to image_tag("pinterest.png"), "#", :target => "_blank" %>
